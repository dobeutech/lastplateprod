# Supabase Configuration (REQUIRED)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Error Monitoring (REQUIRED for production)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Intercom Configuration (Optional - for customer support chat)
# Get your Intercom App ID from https://app.intercom.com/a/apps/_/settings/web
VITE_INTERCOM_APP_ID=your_intercom_app_id_here

# Demo Mode (MUST be false in production)
VITE_ENABLE_DEMO_MODE=false

# Application Configuration
VITE_APP_NAME=Restaurant Management System
VITE_APP_VERSION=1.0.0

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_AUDIT_LOG=true
